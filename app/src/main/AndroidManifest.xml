<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chiglintsev.notboringtrails20">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <!-- <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> -->
    <application

        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="database2.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="20" />
        <meta-data
            android:name="AA_MODELS"
            android:value="chiglintsev.notboringtrails20.models.Places,
                           chiglintsev.notboringtrails20.models.Route1,
                           chiglintsev.notboringtrails20.models.Route2,
                           chiglintsev.notboringtrails20.models.Route3,
                           chiglintsev.notboringtrails20.models.Route4,
                           chiglintsev.notboringtrails20.models.Route5,
                           chiglintsev.notboringtrails20.models.Route6,
                           chiglintsev.notboringtrails20.models.Route7" />

        <activity
            android:windowSoftInputMode="adjustNothing"
            android:launchMode="singleInstance"
            android:screenOrientation="userPortrait"
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_api_note" />


        <activity
            android:screenOrientation="userPortrait"
            android:name=".PlaceActivity2"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".PhotoActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>

        <activity
            android:name=".RouteActivity"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>